<center><h1 class="main">Searching for - <%= @search_term.camelize %></h1></center>

<% if @recipes.nil? %>
	<center><p class="main">No Recipes found!</p></center>

<% else %>
	<center>
		<table id = "pattern-style-b">
			<thead>
				<tr>
					<th scope="col">Thumbnail</th>
					<th scope="col">Title</th>
					<th scope="col">Social Rank</th>
				</tr>
			</thead>
			<% @recipes.each do |recipe| %>
				<tbody>
					<tr>
						<td><%= link_to(image_tag(recipe["image_url"], width:100,height:100) ,recipe["source_url"], :target =>"_blank")  %></td>
						<td><%= link_to(sanitize(recipe["title"]),recipe["source_url"], :target =>"_blank") %></td>
						<td><%= recipe["social_rank"] %></td>
					</tr>
				</tbody>
			<%end%>
		</table>
	</center>
<% end %> 

<footer class="footer-basic-centered">
	<p class="footer-company-motto">Powered By Food2Fork.com</p>
</footer>